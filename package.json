{
  "name": "nextui-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsr generate && tsc && vite build",
    "dev": "concurrently \"tsr watch\" \"vite --port=5173\"",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives 0",
    "lint:fix": "eslint . --ext ts,tsx --fix && pnpm format",
    "lint:strict": "eslint --max-warnings=10 src",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit --incremental false",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=10",
      "prettier -w"
    ],
    "**/*.{json,css,md,webmanifest}": [
      "prettier -w"
    ]
  },
  "dependencies": {
    "@nextui-org/react": "^2.2.9",
    "@tanstack/react-router": "^1.1.4",
    "@tanstack/router-devtools": "^1.1.4",
    "clsx": "^2.1.0",
    "framer-motion": "^10.17.4",
    "lucide-react": "^0.306.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "tailwindcss": "^3.4.0",
    "typewriter-effect": "^2.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@tanstack/router-cli": "^1.1.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.1.1"
  }
}
